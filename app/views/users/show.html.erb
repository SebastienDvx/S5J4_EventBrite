
<h2>User Profile Page</h2>
<div class="row">
	<table class="table text">
		<tr>
			<th>Name</th>
			<td><%=@user.name%></td>
		</tr>
		<tr>
			<th>Email</th>
			<td><%= @user.email %></td>
		</tr>
	</table>
	<p>
		<%= link_to "Modifier", edit_user_path(@current_user), class: "btn btn-lg btn-success" %>
	</p>
</div>
