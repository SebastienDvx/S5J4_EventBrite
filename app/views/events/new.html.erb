<h1>Votre évenement</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
      <%= form_for(@event) do |f| %>

  <br />
        <%= f.label :Titre %>
        <%= f.text_field :title, class: 'form-control' %>
  <br />
        <%= f.label :Description %>
        <%= f.text_area :description, class: 'form-control' %>
  <br />
        <%= f.label :"Date de l'event" %>
  <br />
        <%= f.date_select :date, class: 'form-control' %>
  <br />
  <br />
        <%= f.label :"Lieu" %>
        <%= f.text_field :place, class: 'form-control' %>


        <br><br>
        <%= f.submit "Créer votre event", class: "btn btn-primary" %>
      <% end %>

  </div>
</div>
